{
  "name": "express-app",
  "version": "1.0.0",
  "description": "A simple Express.js application",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "concurrently \"npm run watch:css\" \"nodemon src/app.js\"",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/output.css --watch"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "ejs": "^3.1.10",
    "express": "^4.17.1",
    "express-mysql-session": "^3.0.3",
    "express-session": "^1.18.2",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "nodemon": "^2.0.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "author": "",
  "license": "ISC"
}
