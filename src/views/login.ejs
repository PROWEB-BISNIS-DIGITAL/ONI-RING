                <p class="text-gray-300 text-sm">&copy; 2025 Cemal-Cemil. Semua hak dilindungi.</p>
                <p class="text-gray-400 text-xs mt-1">Dibuat dengan cinta untuk pecinta kuliner</p>
            </div>
        </div>
        
        <!-- Right Side - Login Form -->
        <div class="right-side">
            <div class="max-w-md w-full mx-auto">
                <!-- Form Header -->
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Masuk ke Akun</h2>
                    <p class="text-gray-600">Gunakan kredensial Anda untuk masuk</p>
                </div>
                
                <!-- Error Message -->
                <% if (error) { %>
                    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 animate__animated animate__shakeX">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700"><%= error %></p>
                            </div>
                        </div>
                    </div>
                <% } %>
                
                <!-- Login Form -->
