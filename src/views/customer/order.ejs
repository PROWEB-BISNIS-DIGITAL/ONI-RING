<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <div class="flex pt-16 min-h-screen">
        <!-- Sidebar -->
        <%- include('./partialsCustomer/sidebar') %>

            <!-- Main Content -->
            <main class="main-content bg-gray-200 flex-1 p-4 lg:p-6 ml-80">
                <!-- Header -->
                <div class="mb-6 lg:mb-8">
                    <h1 class="text-2xl lg:text-3xl font-bold text-gray-800">Pesanan Saya</h1>
                    <p class="text-gray-600">Kelola dan pantau semua pesanan Anda di satu tempat</p>
                </div>
                <!-- Filters -->
                <div class="bg-white rounded-lg shadow p-4 lg:p-6 mb-6 lg:mb-8">
                    <!-- Status Filter -->
                    <div class="mb-4 lg:mb-0">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Filter Status</label>
                        <div class="flex flex-wrap gap-2">
                            <a href="/customer/order?status=all"
                                class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'all' ? 'bg-blue-100 text-blue-700 border-blue-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                                Semua
                            </a>
                            <a href="/customer/order?status=pending"
                                class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'pending' ? 'bg-yellow-100 text-yellow-700 border-yellow-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                                Menunggu
                            </a>
                            <a href="/customer/order?status=processing"
                                class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'processing' ? 'bg-purple-100 text-purple-700 border-purple-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                                Diproses
                            </a>
                            <a href="/customer/order?status=completed"
                                class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'completed' ? 'bg-green-100 text-green-700 border-green-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                                Selesai
                            </a>
                            <a href="/customer/order?status=cancelled"
                                class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'cancelled' ? 'bg-red-100 text-red-700 border-red-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                                Dibatalkan
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Orders List -->
                <div class="bg-white rounded-lg shadow overflow-hidden">
                    <% if (orders && orders.length> 0) { %>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th
                                            class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            ID Pesanan
                                        </th>
                                        <th
                                            class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Tanggal
                                        </th>
                                        <th
                                            class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Items
                                        </th>
                                        <th
                                            class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Total
                                        </th>
                                        <th
                                            class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Status
                                        </th>
                                        <th
                                            class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Aksi
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <% orders.forEach(order=> {
                                        let statusColor = '';
                                        let statusText = '';
                                        let statusIcon = '';

                                        switch(order.status) {
                                        case 'pending':
                                        statusColor = 'bg-yellow-100 text-yellow-800';
                                        statusText = 'Menunggu';
                                        statusIcon = 'fa-clock';
                                        break;
                                        case 'confirmed':
                                        statusColor = 'bg-blue-100 text-blue-800';
                                        statusText = 'Dikonfirmasi';
                                        statusIcon = 'fa-check-circle';
                                        break;
                                        case 'processing':
                                        statusColor = 'bg-purple-100 text-purple-800';
                                        statusText = 'Diproses';
                                        statusIcon = 'fa-cogs';
                                        break;
                                        case 'completed':
                                        statusColor = 'bg-green-100 text-green-800';
                                        statusText = 'Selesai';
                                        statusIcon = 'fa-check-double';
                                        break;
                                        case 'cancelled':
                                        statusColor = 'bg-red-100 text-red-800';
                                        statusText = 'Dibatalkan';
                                        statusIcon = 'fa-times-circle';
                                        break;
                                        default:
                                        statusColor = 'bg-gray-100 text-gray-800';
                                        statusText = order.status;
                                        statusIcon = 'fa-circle';
                                        }
                                        %>

                                        <tr class="table-row-hover">
                                            <td class="px-4 lg:px-6 py-4">
                                                <div class="text-sm font-medium text-gray-900">
                                                    #ORD-<%= order.id.toString().padStart(3, '0' ) %>
                                                </div>
                                                <div class="text-xs text-gray-500 mt-1">
                                                    <% if (order.product_name) { %>
                                                        <%= order.product_name %>
                                                            <% } else if (order.items && order.items.length> 0) { %>
                                                                <%= order.items[0].name %>
                                                                    <% if (order.items.length> 1) { %>
                                                                        +<%= order.items.length - 1 %> lainnya
                                                                            <% } %>
                                                                                <% } %>
                                                </div>
                                            </td>
                                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm text-gray-900">
                                                    <%= new Date(order.created_at).toLocaleDateString('id-ID', {
                                                        day: 'numeric' , month: 'short' , year: 'numeric' }) %>
                                                </div>
                                                <div class="text-xs text-gray-500">
                                                    <%= new Date(order.created_at).toLocaleTimeString('id-ID', {
                                                        hour: '2-digit' , minute: '2-digit' }) %>
                                                </div>
                                            </td>
                                            <td class="px-4 lg:px-6 py-4">
                                                <div class="text-sm text-gray-900">
                                                    <%= order.item_count || 0 %> item
                                                </div>
                                                <% if (order.total_items && order.total_items> 0) { %>
                                                    <div class="text-xs text-gray-500">
                                                        <%= order.total_items %> total
                                                    </div>
                                                    <% } %>
                                            </td>
                                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                                <div class="text-base font-bold text-gray-900">
                                                    Rp <%= order.total.toLocaleString('id-ID') %>
                                                </div>
                                            </td>
                                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                                <span class="status-badge <%= statusColor %> flex items-center gap-1">
                                                    <i class="fas <%= statusIcon %>"></i>
                                                    <%= statusText %>
                                                </span>
                                            </td>
                                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                                <div class="flex flex-col sm:flex-row gap-2">
                                                    <a href="/customer/order/<%= order.id %> onclick="" "
                                                        class="text-blue-500 hover:text-blue-700 px-3 py-1 border border-blue-200 rounded-lg hover:bg-blue-50 text-sm flex items-center justify-center">
                                                        <i class="fas fa-eye mr-1"></i> Detail
                                                    </a>
                                                    <% if (order.status==='pending' ) { %>
                                                        <button onclick="cancelOrde('<%= order.id %>')"
                                                            class="text-red-500 hover:text-red-700 px-3 py-1 border border-red-200 rounded-lg hover:bg-red-50 text-sm flex items-center justify-center">
                                                            <i class="fas fa-times mr-1"></i> Batal
                                                        </button>
                                                        <% } %>
                                                            <% if (order.status==='completed' ) { %>
                                                                <a href="/customer/order/<%= order.id %>/invoice"
                                                                    class="text-green-500 hover:text-green-700 px-3 py-1 border border-green-200 rounded-lg hover:bg-green-50 text-sm flex items-center justify-center">
                                                                    <i class="fas fa-download mr-1"></i> Invoice
                                                                </a>
                                                                <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Modal Popup Detail Pesanan -->
                        <div id="orderDetailModal"
                            class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center p-4 z-50">
                            <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-hidden">
                                <!-- Modal Header -->
                                <div class="flex items-center justify-between p-6 border-b border-gray-200">
                                    <div>
                                        <h3 class="text-xl font-bold text-gray-800">Detail Pesanan</h3>
                                        <p class="text-gray-600 text-sm mt-1" id="modalOrderNumber"></p>
                                    </div>
                                    <button onclick="closeOrderDetailModal()"
                                        class="text-gray-400 hover:text-gray-600 text-2xl">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>

                                <!-- Info jumlah pesanan -->
                                <div class="px-4 lg:px-6 py-4 border-t border-gray-200">
                                    <div class="text-sm text-gray-500">
                                        Menampilkan <span class="font-medium">
                                            <%= orders.length %>
                                        </span> pesanan
                                    </div>
                                </div>
                                <% } else { %>
                                    <!-- Empty State -->
                                    <div class="text-center py-12">
                                        <div
                                            class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
                                            <i class="fas fa-shopping-bag text-3xl text-gray-400"></i>
                                        </div>
                                        <h3 class="text-lg font-medium text-gray-700 mb-2">Belum ada pesanan</h3>
                                        <p class="text-gray-500 mb-6">Anda belum melakukan pemesanan apapun</p>
                                        <a href="/"
                                            class="inline-flex items-center px-5 py-2.5 bg-red-500 hover:bg-red-600 text-white rounded-lg transition duration-300 font-medium text-sm">
                                            <i class="fas fa-store mr-2"></i> Belanja Sekarang
                                        </a>
                                    </div>
                                    <% } %>
                            </div>
            </main>
    </div>

    <!-- Simple Cancel Modal -->
    <div id="cancelModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
        <div class="bg-white rounded-lg max-w-md w-full p-6">
            <div class="mb-4">
                <div class="flex items-center">
                    <div class="bg-red-100 p-2 rounded-lg mr-3">
                        <i class="fas fa-exclamation-triangle text-red-500"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-gray-800">Batalkan Pesanan</h3>
                        <p class="text-sm text-gray-500">Konfirmasi pembatalan pesanan</p>
                    </div>
                </div>
            </div>

            <div class="mb-6">
                <p class="text-gray-700 mb-4">Apakah Anda yakin ingin membatalkan pesanan ini?</p>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-500 mb-1">ID Pesanan</p>
                    <p id="cancelOrderId" class="font-medium text-gray-800">-</p>
                </div>
            </div>

            <div class="flex justify-end gap-3">
                <button onclick="closeCancelModal()"
                    class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                    Tidak
                </button>
                <button onclick="confirmCancel()" class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg">
                    Ya, Batalkan
                </button>
            </div>
        </div>

        <script>
            // Search functionality
            document.getElementById('searchBtn').addEventListener('click', function () {
                const query = document.getElementById('searchInput').value.trim();
                if (query) {
                    window.location.href = `/customer/api/orders/search?query=${encodeURIComponent(query)}`;
                }
            });

            document.getElementById('searchInput').addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    document.getElementById('searchBtn').click();
                }
            });

            // Dropdown for export
            const exportBtn = document.querySelector('.dropdown button');
            const exportMenu = document.querySelector('.dropdown-menu');

            exportBtn.addEventListener('click', function (e) {
                e.stopPropagation();
                exportMenu.classList.toggle('hidden');
            });

            document.addEventListener('click', function () {
                exportMenu.classList.add('hidden');
            });

            // Cancel Modal Functions (sama seperti di dashboard)
            let currentOrderId = null;

            function openCancelModal(orderId, orderNumber, total) {
                currentOrderId = orderId;
                // ... implementasi sama seperti di dashboard
            }

            function closeCancelModal() {
                // ... implementasi sama seperti di dashboard
            }

            function confirmCancel() {
                // ... implementasi sama seperti di dashboard
            }
    </script>
</body>

</html>