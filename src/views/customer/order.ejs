<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesanan Saya</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        .table-row-hover:hover {
            background-color: #f9fafb;
        }
        
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }
        
        .modal-container {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            max-height: 90vh;
            overflow-y: auto;
            animation: modalSlideIn 0.3s ease-out;
        }
        
        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .modal-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .modal-body {
            padding: 1.5rem;
        }
        
        .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
            padding: 1.5rem;
            border-top: 1px solid #e5e7eb;
        }
        
        .detail-modal {
            max-width: 800px !important;
        }
        
        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            gap: 0.25rem;
        }
    </style>
</head>

<body class="bg-gray-100">
    <div class="flex pt-16 min-h-screen">
        <!-- Sidebar -->
        <%- include('./partialsCustomer/sidebar') %>

        <!-- Main Content -->
        <main class="main-content bg-gray-300 flex-1 w-full p-4 lg:p-8 lg:ml-80">
            <!-- Header -->
            <div class="mb-6 lg:mb-8">
                <h1 class="text-2xl lg:text-3xl font-bold text-gray-800">Pesanan Saya</h1>
                <p class="text-gray-600">Kelola dan pantau semua pesanan Anda di satu tempat</p>
            </div>
            
            <!-- Filters -->
            <div class="bg-white rounded-lg shadow p-4 lg:p-6 mb-6 lg:mb-8">
                <!-- Status Filter -->
                <div class="mb-4 lg:mb-0">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Filter Status</label>
                    <div class="flex flex-wrap gap-2">
                        <a href="/customer/order?status=all"
                            class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'all' ? 'bg-blue-100 text-blue-700 border-blue-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                            Semua
                        </a>
                        <a href="/customer/order?status=pending"
                            class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'pending' ? 'bg-yellow-100 text-yellow-700 border-yellow-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                            Menunggu
                        </a>
                        <a href="/customer/order?status=processing"
                            class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'processing' ? 'bg-purple-100 text-purple-700 border-purple-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                            Diproses
                        </a>
                        <a href="/customer/order?status=completed"
                            class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'completed' ? 'bg-green-100 text-green-700 border-green-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                            Selesai
                        </a>
                        <a href="/customer/order?status=cancelled"
                            class="px-3 lg:px-4 py-2 rounded-lg border text-sm <%= filters.status === 'cancelled' ? 'bg-red-100 text-red-700 border-red-300' : 'bg-gray-100 text-gray-700 border-gray-300 hover:bg-gray-200' %>">
                            Dibatalkan
                        </a>
                    </div>
                </div>
            </div>

            <!-- Orders List -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <% if (orders && orders.length > 0) { %>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        ID Pesanan
                                    </th>
                                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Tanggal
                                    </th>
                                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Items
                                    </th>
                                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Total
                                    </th>
                                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Status
                                    </th>
                                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Aksi
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% orders.forEach(order => { 
                                    let statusColor = '';
                                    let statusText = '';
                                    let statusIcon = '';

                                    switch(order.status) {
                                        case 'pending':
                                            statusColor = 'bg-yellow-100 text-yellow-800';
                                            statusText = 'Menunggu';
                                            statusIcon = 'fa-clock';
                                            break;
                                        case 'confirmed':
                                            statusColor = 'bg-blue-100 text-blue-800';
                                            statusText = 'Dikonfirmasi';
                                            statusIcon = 'fa-check-circle';
                                            break;
                                        case 'processing':
                                            statusColor = 'bg-purple-100 text-purple-800';
                                            statusText = 'Diproses';
                                            statusIcon = 'fa-cogs';
                                            break;
                                        case 'completed':
                                            statusColor = 'bg-green-100 text-green-800';
                                            statusText = 'Selesai';
                                            statusIcon = 'fa-check-double';
                                            break;
                                        case 'cancelled':
                                            statusColor = 'bg-red-100 text-red-800';
                                            statusText = 'Dibatalkan';
                                            statusIcon = 'fa-times-circle';
                                            break;
                                        default:
                                            statusColor = 'bg-gray-100 text-gray-800';
                                            statusText = order.status;
                                            statusIcon = 'fa-circle';
                                    }
                                %>
                                    <tr class="table-row-hover">
                                        <td class="px-4 lg:px-6 py-4">
                                            <div class="text-sm font-medium text-gray-900">
                                                #ORD-<%= order.id.toString().padStart(3, '0') %>
                                            </div>
                                            <div class="text-xs text-gray-500 mt-1">
                                                <% if (order.product_name) { %>
                                                    <%= order.product_name %>
                                                <% } else if (order.items && order.items.length > 0) { %>
                                                    <%= order.items[0].name %>
                                                    <% if (order.items.length > 1) { %>
                                                        +<%= order.items.length - 1 %> lainnya
                                                    <% } %>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">
                                                <%= new Date(order.created_at).toLocaleDateString('id-ID', { 
                                                    day: 'numeric', month: 'short', year: 'numeric' 
                                                }) %>
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                <%= new Date(order.created_at).toLocaleTimeString('id-ID', { 
                                                    hour: '2-digit', minute: '2-digit' 
                                                }) %>
                                            </div>
                                        </td>
                                        <td class="px-4 lg:px-6 py-4">
                                            <div class="text-sm text-gray-900">
                                                <%= order.item_count || 0 %> item
                                            </div>
                                            <% if (order.total_items && order.total_items > 0) { %>
                                                <div class="text-xs text-gray-500">
                                                    <%= order.total_items %> total
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                            <div class="text-base font-bold text-gray-900">
                                                Rp <%= Number(order.total || 0).toLocaleString('id-ID') %>
                                            </div>
                                        </td>
                                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                            <span class="status-badge <%= statusColor %>">
                                                <i class="fas <%= statusIcon %>"></i>
                                                <%= statusText %>
                                            </span>
                                        </td>
                                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                            <div class="flex flex-col sm:flex-row gap-2">
                                                <!-- Tombol Detail selalu muncul -->
                                                <button onclick="openDetailModal('<%= order.id %>')"
                                                    class="text-blue-500 hover:text-blue-700 px-3 py-1 border border-blue-200 rounded-lg hover:bg-blue-50 text-sm flex items-center justify-center">
                                                    <i class="fas fa-eye mr-1"></i> Detail
                                                </button>
                                                
                                                <!-- Tombol berdasarkan status -->
                                                <% if (order.status === 'pending') { %>
                                                    <!-- Menunggu: Detail + Batalkan -->
                                                    <button onclick="openCancelModal('<%= order.id %>', '#ORD-<%= order.id.toString().padStart(3, '0') %>')"
                                                        class="text-red-500 hover:text-red-700 px-3 py-1 border border-red-200 rounded-lg hover:bg-red-50 text-sm flex items-center justify-center">
                                                        <i class="fas fa-times mr-1"></i> Batal
                                                    </button>
                                                <% } else if (order.status === 'completed') { %>
                                                <% } %>
                                                <!-- Status lainnya hanya punya tombol Detail -->
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Info jumlah pesanan -->
                    <div class="px-4 lg:px-6 py-4 border-t border-gray-200">
                        <div class="text-sm text-gray-500">
                            Menampilkan <span class="font-medium">
                                <%= orders.length %>
                            </span> pesanan
                        </div>
                    </div>
                <% } else { %>
                    <!-- Empty State -->
                    <div class="text-center py-12">
                        <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
                            <i class="fas fa-shopping-bag text-3xl text-gray-400"></i>
                        </div>
                        <h3 class="text-lg font-medium text-gray-700 mb-2">Belum ada pesanan</h3>
                        <p class="text-gray-500 mb-6">Anda belum melakukan pemesanan apapun</p>
                        <a href="/"
                            class="inline-flex items-center px-5 py-2.5 bg-red-500 hover:bg-red-600 text-white rounded-lg transition duration-300 font-medium text-sm">
                            <i class="fas fa-store mr-2"></i> Belanja Sekarang
                        </a>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <!-- Detail Pesanan Modal -->
    <div id="detailModal" class="modal-overlay">
        <div class="modal-container detail-modal">
            <div class="modal-header">
                <div class="flex items-center">
                    <div class="bg-blue-100 p-2 rounded-lg mr-3">
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800">Detail Pesanan</h3>
                        <p class="text-sm text-gray-500" id="detailOrderNumber">#ORD-000</p>
                    </div>
                </div>
                <button onclick="closeDetailModal()" class="text-gray-400 hover:text-gray-600 text-2xl">
                    &times;
                </button>
            </div>
            
            <div class="modal-body">
                <!-- Info Pesanan -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-sm text-gray-500 mb-1">Tanggal Pesan</p>
                        <p id="detailDate" class="font-medium text-gray-800">-</p>
                    </div>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-sm text-gray-500 mb-1">Status</p>
                        <span id="detailStatus" class="px-3 py-1 text-xs font-semibold rounded-full">-</span>
                    </div>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-sm text-gray-500 mb-1">Total</p>
                        <p id="detailTotal" class="font-bold text-gray-800 text-lg">Rp 0</p>
                    </div>
                </div>

                <!-- Info Customer -->
                <div class="mb-6">
                    <h4 class="font-bold text-gray-700 mb-3">Informasi Customer</h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500 mb-1">Nama</p>
                            <p id="detailCustomerName" class="font-medium text-gray-800">-</p>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500 mb-1">No. Telepon</p>
                            <p id="detailCustomerPhone" class="font-medium text-gray-800">-</p>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500 mb-1">Alamat</p>
                            <p id="detailCustomerAddress" class="font-medium text-gray-800">-</p>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-500 mb-1">Metode Pembayaran</p>
                            <p id="detailPaymentMethod" class="font-medium text-gray-800">-</p>
                        </div>
                    </div>
                </div>

                <!-- Daftar Produk (Landscape/Lebar) -->
                <div class="mb-6">
                    <h4 class="font-bold text-gray-700 mb-3">Daftar Produk</h4>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">No</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Produk</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Qty</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Harga</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody id="detailItems" class="bg-white divide-y divide-gray-200">
                                <!-- Items akan diisi oleh JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Ringkasan Pembayaran -->
                <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-bold text-gray-700 mb-3">Ringkasan Pembayaran</h4>
                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Subtotal</span>
                            <span id="detailSubtotal" class="font-medium">Rp 0</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Total</span>
                            <span id="detailTotalAmount" class="text-lg font-bold text-red-600">Rp 0</span>
                        </div>
                    </div>
                </div>

                <!-- Catatan -->
                <div id="detailNotesContainer" class="mt-6 hidden">
                    <h4 class="font-bold text-gray-700 mb-3">Catatan Pesanan</h4>
                    <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
                        <p id="detailNotes" class="text-gray-700 italic">-</p>
                    </div>
                </div>
            </div>
            
            <div class="modal-footer">
                <button onclick="closeDetailModal()" class="px-5 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-300 font-medium">
                    Tutup
                </button>
                <button id="detailCancelBtn" onclick="openCancelModalFromDetail()" class="px-5 py-2.5 bg-red-500 hover:bg-red-600 text-white rounded-lg transition duration-300 font-medium flex items-center hidden">
                    <i class="fas fa-times mr-2"></i>
                    Batalkan Pesanan
                </button>
            </div>
        </div>
    </div>

    <!-- Cancel Modal -->
    <div id="cancelModal" class="modal-overlay">
        <div class="modal-container">
            <div class="modal-header">
                <div class="flex items-center">
                    <div class="bg-red-100 p-2 rounded-lg mr-3">
                        <i class="fas fa-exclamation-triangle text-red-500 text-xl"></i>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800">Batalkan Pesanan</h3>
                        <p class="text-sm text-gray-500">Konfirmasi pembatalan pesanan</p>
                    </div>
                </div>
                <button onclick="closeCancelModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
            </div>
            
            <div class="modal-body">
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                    <div class="flex">
                        <i class="fas fa-info-circle text-red-500 mt-0.5 mr-3"></i>
                        <div>
                            <p class="font-medium text-red-700">Peringatan!</p>
                            <p class="text-sm text-red-600 mt-1">
                                Pembatalan pesanan akan mengirim notifikasi ke admin. 
                                Tindakan ini tidak dapat dibatalkan.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-6">
                    <h4 class="font-medium text-gray-700 mb-3">Detail Pesanan</h4>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <div class="grid grid-cols-1 gap-3">
                            <div>
                                <p class="text-sm text-gray-500 mb-1">ID Pesanan</p>
                                <p id="cancelOrderId" class="font-medium text-gray-800">#ORD-001</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500 mb-1">Total Pesanan</p>
                                <p id="cancelTotal" class="font-medium text-gray-800">Rp 0</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mb-6">
                    <label for="cancelReason" class="block text-sm font-medium text-gray-700 mb-2">
                        Alasan Pembatalan <span class="text-red-500">*</span>
                    </label>
                    <select id="cancelReason" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200">
                        <option value="">Pilih alasan pembatalan</option>
                        <option value="ubah_pesanan">Ingin mengubah pesanan</option>
                        <option value="ganti_waktu">Ingin ganti waktu pengiriman</option>
                        <option value="keuangan">Masalah keuangan</option>
                        <option value="double_order">Pesanan double/tidak sengaja</option>
                        <option value="lainnya">Alasan lainnya</option>
                    </select>
                    <p id="reasonError" class="text-red-500 text-sm mt-1 hidden">Silakan pilih alasan pembatalan</p>
                </div>
            </div>
            
            <div class="modal-footer">
                <button onclick="closeCancelModal()" class="px-5 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-300 font-medium">
                    Batal
                </button>
                <button onclick="confirmCancel()" class="px-5 py-2.5 bg-red-500 hover:bg-red-600 text-white rounded-lg transition duration-300 font-medium flex items-center">
                    <i class="fas fa-times mr-2"></i>
                    Ya, Batalkan
                </button>
            </div>
        </div>
    </div>

    <script>
        // Global variables
        let currentOrderId = null;
        let currentOrderStatus = null;

        // Detail Modal Functions
        async function openDetailModal(orderId) {
            try {
                currentOrderId = orderId;
                
                // Show loading state
                document.getElementById('detailModal').style.display = 'flex';
                document.getElementById('detailOrderNumber').textContent = '#ORD-' + String(orderId).padStart(3, '0');
                document.getElementById('detailDate').textContent = 'Loading...';
                document.getElementById('detailTotal').textContent = 'Loading...';
                document.getElementById('detailItems').innerHTML = '<tr><td colspan="5" class="text-center py-4 text-gray-500">Memuat data...</td></tr>';

                // Fetch order detail from server
                const response = await fetch(`/customer/order/${orderId}/detail`);
                const data = await response.json();

                if (!data.success) {
                    showNotification(data.message || 'Gagal memuat detail pesanan', 'error');
                    closeDetailModal();
                    return;
                }

                const order = data.order;
                currentOrderStatus = order.status;

                // Update basic info
                document.getElementById('detailOrderNumber').textContent = '#ORD-' + String(order.id).padStart(3, '0');
                document.getElementById('detailDate').textContent = new Date(order.created_at).toLocaleDateString('id-ID', {
                    day: 'numeric',
                    month: 'long',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                
                // Update status with color
                let statusColor = 'bg-gray-100 text-gray-800';
                let statusText = order.status;
                
                switch(order.status) {
                    case 'pending':
                        statusColor = 'bg-yellow-100 text-yellow-800';
                        statusText = 'Menunggu';
                        break;
                    case 'confirmed':
                        statusColor = 'bg-blue-100 text-blue-800';
                        statusText = 'Dikonfirmasi';
                        break;
                    case 'processing':
                        statusColor = 'bg-purple-100 text-purple-800';
                        statusText = 'Diproses';
                        break;
                    case 'completed':
                        statusColor = 'bg-green-100 text-green-800';
                        statusText = 'Selesai';
                        break;
                    case 'cancelled':
                        statusColor = 'bg-red-100 text-red-800';
                        statusText = 'Dibatalkan';
                        break;
                }
                
                document.getElementById('detailStatus').textContent = statusText;
                document.getElementById('detailStatus').className = `px-3 py-1 text-xs font-semibold rounded-full ${statusColor}`;
                
                document.getElementById('detailTotal').textContent = 'Rp ' + Number(order.total || 0).toLocaleString('id-ID');
                document.getElementById('detailTotalAmount').textContent = 'Rp ' + Number(order.total || 0).toLocaleString('id-ID');

                // Update customer info
                document.getElementById('detailCustomerName').textContent = order.customer_name || '-';
                document.getElementById('detailCustomerPhone').textContent = order.customer_phone || '-';
                document.getElementById('detailCustomerAddress').textContent = order.customer_address || '-';
                
                // Update payment method
                let paymentMethod = order.payment_method || '-';
                if (paymentMethod === 'qris') paymentMethod = 'QRIS';
                if (paymentMethod === 'credit_card') paymentMethod = 'Kartu Kredit';
                if (paymentMethod === 'gopay') paymentMethod = 'Gopay';
                if (paymentMethod === 'midtrans') paymentMethod = 'Midtrans';
                document.getElementById('detailPaymentMethod').textContent = paymentMethod;

                // Update items table
                const itemsTable = document.getElementById('detailItems');
                itemsTable.innerHTML = '';
                
                if (data.items && data.items.length > 0) {
                    let subtotal = 0;
                    data.items.forEach((item, index) => {
                        const row = document.createElement('tr');
                        const itemSubtotal = (item.quantity || 0) * (item.price || 0);
                        subtotal += itemSubtotal;
                        
                        row.innerHTML = `
                            <td class="px-4 py-3">${index + 1}</td>
                            <td class="px-4 py-3">${item.name || '-'}</td>
                            <td class="px-4 py-3">${item.quantity || 0}</td>
                            <td class="px-4 py-3">Rp ${Number(item.price || 0).toLocaleString('id-ID')}</td>
                            <td class="px-4 py-3 font-medium">Rp ${Number(itemSubtotal).toLocaleString('id-ID')}</td>
                        `;
                        itemsTable.appendChild(row);
                    });
                    
                    // Update subtotal
                    document.getElementById('detailSubtotal').textContent = 'Rp ' + Number(subtotal).toLocaleString('id-ID');
                } else {
                    itemsTable.innerHTML = '<tr><td colspan="5" class="text-center py-4 text-gray-500">Tidak ada item</td></tr>';
                }

                // Update notes
                if (order.notes) {
                    document.getElementById('detailNotesContainer').classList.remove('hidden');
                    document.getElementById('detailNotes').textContent = order.notes;
                } else {
                    document.getElementById('detailNotesContainer').classList.add('hidden');
                }

                // Show/hide cancel button based on status
                const cancelBtn = document.getElementById('detailCancelBtn');
                if (order.status === 'pending') {
                    cancelBtn.classList.remove('hidden');
                } else {
                    cancelBtn.classList.add('hidden');
                }

            } catch (error) {
                console.error('Error fetching order detail:', error);
                showNotification('Terjadi kesalahan saat memuat detail pesanan', 'error');
                closeDetailModal();
            }
        }

        function closeDetailModal() {
            document.getElementById('detailModal').style.display = 'none';
            currentOrderId = null;
            currentOrderStatus = null;
        }

        // Cancel Modal Functions
        function openCancelModal(orderId, orderNumber = '') {
            currentOrderId = orderId;
            document.getElementById('cancelOrderId').textContent = orderNumber || '#ORD-' + String(orderId).padStart(3, '0');
            
            // Find the order total from the table
            const row = document.querySelector(`tr:has(button[onclick*="openDetailModal('${orderId}')"])`);
            if (row) {
                const totalCell = row.querySelector('td:nth-child(4) .text-base');
                if (totalCell) {
                    document.getElementById('cancelTotal').textContent = totalCell.textContent;
                }
            }
            
            document.getElementById('cancelModal').style.display = 'flex';
            document.getElementById('cancelReason').value = '';
            document.getElementById('reasonError').classList.add('hidden');
        }

        function openCancelModalFromDetail() {
            const orderNumber = document.getElementById('detailOrderNumber').textContent;
            const total = document.getElementById('detailTotal').textContent;
            
            closeDetailModal();
            
            setTimeout(() => {
                currentOrderId = currentOrderId;
                document.getElementById('cancelOrderId').textContent = orderNumber;
                document.getElementById('cancelTotal').textContent = total;
                document.getElementById('cancelModal').style.display = 'flex';
                document.getElementById('cancelReason').value = '';
                document.getElementById('reasonError').classList.add('hidden');
            }, 300);
        }

        function closeCancelModal() {
            document.getElementById('cancelModal').style.display = 'none';
            currentOrderId = null;
        }

        async function confirmCancel() {
            if (!currentOrderId) return;

            const reason = document.getElementById('cancelReason').value;
            const reasonError = document.getElementById('reasonError');

            if (!reason) {
                reasonError.classList.remove('hidden');
                document.getElementById('cancelReason').focus();
                return;
            }

            reasonError.classList.add('hidden');

            try {
                const response = await fetch(`/customer/order/${currentOrderId}/cancel`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ reason })
                });

                const data = await response.json();

                if (!data.success) {
                    showNotification(data.message || 'Gagal membatalkan pesanan', 'error');
                    return;
                }

                // Remove the order row from table
                const orderRow = document.querySelector(`tr:has(button[onclick*="openDetailModal('${currentOrderId}')"])`);
                if (orderRow) {
                    orderRow.remove();
                    
                    // Update order count
                    const orderCountElement = document.querySelector('.text-sm.text-gray-500 span.font-medium');
                    if (orderCountElement) {
                        const currentCount = parseInt(orderCountElement.textContent) - 1;
                        orderCountElement.textContent = currentCount;
                        
                        if (currentCount === 0) {
                            // Reload page if no orders left
                            setTimeout(() => {
                                location.reload();
                            }, 1000);
                        }
                    }
                }

                showNotification(data.message || 'Pesanan berhasil dibatalkan!', 'success');
                closeCancelModal();
            } catch (error) {
                console.error('Error cancelling order:', error);
                showNotification('Terjadi kesalahan saat membatalkan pesanan', 'error');
            }
        }

        // Notification System
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed top-20 right-4 z-50 px-6 py-4 rounded-lg shadow-lg animate__animated animate__fadeInRight ${
                type === 'success' ? 'bg-green-500' : 'bg-red-500'
            } text-white max-w-sm`;
            
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-times-circle'} mr-3 text-xl"></i>
                    <span class="font-medium">${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('animate__fadeInRight');
                notification.classList.add('animate__fadeOutRight');
                setTimeout(() => {
                    notification.remove();
                }, 1000);
            }, 3000);
        }

        // Close modals when clicking outside
        window.addEventListener('click', function(event) {
            const detailModal = document.getElementById('detailModal');
            const cancelModal = document.getElementById('cancelModal');
            
            if (event.target === detailModal) {
                closeDetailModal();
            }
            if (event.target === cancelModal) {
                closeCancelModal();
            }
        });

        // Close modals with Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeDetailModal();
                closeCancelModal();
            }
        });
    </script>
