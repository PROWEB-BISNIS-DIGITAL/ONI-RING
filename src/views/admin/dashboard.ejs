<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Dashboard Admin' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        
        .main-content {
            flex: 1;
            overflow-y: auto;
            padding: 2rem;
        }
        
        .dashboard-card {
            transition: all 0.3s ease;
        }
        
        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }
        
        .modal-container {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            width: 100%;
            max-width: 500px;
            max-height: 90vh;
            overflow-y: auto;
            animation: modalSlideIn 0.3s ease-out;
        }
        
        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .modal-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.5rem;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .modal-body {
            padding: 1.5rem;
        }
        
        .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
            padding: 1.5rem;
            border-top: 1px solid #e5e7eb;
        }
        
        .modal-container::-webkit-scrollbar {
            width: 6px;
        }
        
        .modal-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }
        
        .modal-container::-webkit-scrollbar-thumb {
            background: #d1d5db;
            border-radius: 3px;
        }
        
        .modal-container::-webkit-scrollbar-thumb:hover {
            background: #9ca3af;
        }

        .fade-out {
            animation: fadeOut 0.5s ease-out forwards;
        }

        @keyframes fadeOut {
            from {
                opacity: 1;
                transform: translateY(0);
            }
            to {
                opacity: 0;
                transform: translateY(-20px);
            }
        }
    </style>
</head>
<div class="flex pt-16 min-h-screen">
        <%- include('./partialsAdmin/sidebar') %>

    <main class="main-content h-full" style="flex: 1; padding: 2rem;">

        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
            </div>
        </div>
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="dashboard-card bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Total Pesanan</p>
                            <p class="text-2xl font-bold text-blue-600">
                                <%= (stats && stats.totalOrders) || 0 %>
                            </p>
                        </div>
                        <div class="bg-blue-100 p-3 rounded-full">
                            <i class="fas fa-shopping-cart text-blue-600 text-2xl"></i>
                        </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-2">
                        +<%= (stats && stats.todayOrders) || 0 %> pesanan hari ini
                    </p>
                </div>

                <div class="dashboard-card bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Total Produk</p>
                            <p class="text-2xl font-bold text-purple-600">
                                <%= (stats && stats.totalProducts) || 0 %>
                            </p>
                        </div>
                        <div class="bg-purple-100 p-3 rounded-full">
                            <i class="fas fa-utensils text-purple-600 text-2xl"></i>
                        </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-2">
                        <%= (stats && stats.activeProducts) || 0 %> produk aktif
                    </p>
                </div>

                <div class="dashboard-card bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Total Pengguna</p>
                            <p class="text-2xl font-bold text-red-600">
                                <%= (stats && stats.totalUsers) || 0 %>
                            </p>
                        </div>
                        <div class="bg-red-100 p-3 rounded-full">
                            <i class="fas fa-users text-red-600 text-2xl"></i>
                        </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-2">
                        +<%= (stats && stats.newUsers) || 0 %> user baru
                    </p>
                </div>
            </div>

            <!-- Pesanan Terbaru -->
            <div class="bg-white rounded-lg shadow p-6 mb-8">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold text-gray-800">Pesanan Terbaru</h2>
                    <a href="/admin/orders" class="text-red-500 hover:text-red-600 font-semibold">
                        Lihat Semua →
                    </a>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (recentOrders && recentOrders.length > 0) { %>
                                <% recentOrders.forEach(function(order) { %>
                                    <tr id="order-<%= order.id %>">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            #ORD-<%= String(order.id).padStart(3, '0') %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <%= order.customer_name || '-' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            Rp <%= Number(order.total || 0).toLocaleString('id-ID') %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% 
                                                const status = (order.status || '').toLowerCase();
                                                let statusClass = 'bg-yellow-100 text-yellow-800';
                                                let statusLabel = 'Pending';

                                                if (status === 'confirmed' || status === 'approved' || status === 'selesai' || status === 'completed') {
                                                    statusClass = 'bg-green-100 text-green-800';
                                                    statusLabel = 'Approved';
                                                } else if (status === 'cancelled' || status === 'canceled' || status === 'batal') {
                                                    statusClass = 'bg-red-100 text-red-800';
                                                    statusLabel = 'Canceled';
                                                }
                                            %>
                                            <span class="status-badge px-2 py-1 text-xs rounded-full <%= statusClass %>">
                                                <%= statusLabel %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <%= order.created_at_formatted || order.created_at || '-' %>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <button class="text-blue-500 hover:text-blue-700 mr-3" title="Lihat Detail">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button
                                                class="text-green-500 hover:text-green-700 mr-2"
                                                title="Approve Pesanan"
                                                data-order-id="<%= order.id %>"
                                                data-customer-name="<%= order.customer_name || '' %>"
                                                data-total="<%= order.total || 0 %>"
                                                onclick="openApproveFromButton(this)">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button
                                                class="text-red-500 hover:text-red-700"
                                                title="Cancel Pesanan"
                                                data-order-id="<%= order.id %>"
                                                data-customer-name="<%= order.customer_name || '' %>"
                                                data-total="<%= order.total || 0 %>"
                                                onclick="openCancelFromButton(this)">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                        Belum ada pesanan.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="bg-white p-6 rounded-lg shadow">
                    <h3 class="text-lg font-bold mb-4 text-gray-800">Tambah Produk Baru</h3>
                    <p class="text-gray-600 mb-4">Tambahkan menu makanan atau minuman baru ke katalog.</p>
                    <a href="/admin/products" class="inline-block bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-300">
                        <i class="fas fa-plus mr-2"></i>Tambah Produk
                    </a>
                </div>

                <div class="bg-white p-6 rounded-lg shadow">
                    <h3 class="text-lg font-bold mb-4 text-gray-800">Kelola Pesanan</h3>
                    <p class="text-gray-600 mb-4">Approve atau cancel pesanan yang masuk dari customer.</p>
                    <div id="quickActionOrders" class="space-y-4">
                        <% if (pendingOrders && pendingOrders.length > 0) { %>
                            <% pendingOrders.forEach(function(order) { %>
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg" id="quick-order-<%= order.id %>">
                                    <div>
                                        <p class="font-medium">
                                            #ORD-<%= String(order.id).padStart(3, '0') %> - <%= order.customer_name || '-' %>
                                        </p>
                                        <p class="text-sm text-gray-500">
                                            Rp <%= Number(order.total || 0).toLocaleString('id-ID') %> • 
                                            <%= order.created_at_formatted || order.created_at || '-' %>
                                        </p>
                                    </div>
                                    <div class="flex space-x-2">
                                        <button
                                            class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded-lg transition duration-300 text-sm"
                                            data-order-id="<%= order.id %>"
                                            data-customer-name="<%= order.customer_name || '' %>"
                                            data-total="<%= order.total || 0 %>"
                                            onclick="openApproveFromButton(this)">
                                            <i class="fas fa-check mr-1"></i>Approve
                                        </button>
                                        <button
                                            class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg transition duration-300 text-sm"
                                            data-order-id="<%= order.id %>"
                                            data-customer-name="<%= order.customer_name || '' %>"
                                            data-total="<%= order.total || 0 %>"
                                            onclick="openCancelFromButton(this)">
                                            <i class="fas fa-times mr-1"></i>Cancel
                                        </button>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-gray-500 text-center py-4">Tidak ada pesanan pending</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Approve Order Modal -->
            <div id="approveModal" class="modal-overlay">
                <div class="modal-container">
                    <div class="modal-header">
                        <div class="flex items-center">
                            <div class="bg-green-100 p-2 rounded-lg mr-3">
                                <i class="fas fa-check-circle text-green-500 text-xl"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-gray-800">Approve Pesanan</h3>
                                <p class="text-sm text-gray-500">Konfirmasi persetujuan pesanan</p>
                            </div>
                        </div>
                        <button onclick="closeApproveModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
                    </div>
                    
                    <div class="modal-body">
                        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                            <div class="flex">
                                <i class="fas fa-info-circle text-green-500 mt-0.5 mr-3"></i>
                                <div>
                                    <p class="font-medium text-green-700">Informasi</p>
                                    <p class="text-sm text-green-600 mt-1">
                                        Pesanan akan diproses dan customer akan menerima notifikasi persetujuan.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <h4 class="font-medium text-gray-700 mb-3">Detail Pesanan</h4>
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">ID Pesanan</p>
                                        <p id="approveOrderId" class="font-medium text-gray-800">#ORD-001</p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">Customer</p>
                                        <p id="approveCustomer" class="font-medium text-gray-800">-</p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">Total Pesanan</p>
                                        <p id="approveTotal" class="font-medium text-gray-800">Rp 0</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <label for="approveNotes" class="block text-sm font-medium text-gray-700 mb-2">
                                Catatan (Opsional)
                            </label>
                            <textarea id="approveNotes" rows="3" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition duration-200" placeholder="Tambahkan catatan untuk pesanan ini..."></textarea>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button onclick="closeApproveModal()" class="px-5 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-300 font-medium">
                            Batal
                        </button>
                        <button onclick="confirmApprove()" class="px-5 py-2.5 bg-green-500 hover:bg-green-600 text-white rounded-lg transition duration-300 font-medium flex items-center">
                            <i class="fas fa-check mr-2"></i>
                            Approve Pesanan
                        </button>
                    </div>
                </div>
            </div>

            <!-- Cancel Order Modal -->
            <div id="cancelModal" class="modal-overlay">
                <div class="modal-container">
                    <div class="modal-header">
                        <div class="flex items-center">
                            <div class="bg-red-100 p-2 rounded-lg mr-3">
                                <i class="fas fa-exclamation-triangle text-red-500 text-xl"></i>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-gray-800">Cancel Pesanan</h3>
                                <p class="text-sm text-gray-500">Konfirmasi pembatalan pesanan</p>
                            </div>
                        </div>
                        <button onclick="closeCancelModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
                    </div>
                    
                    <div class="modal-body">
                        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                            <div class="flex">
                                <i class="fas fa-info-circle text-red-500 mt-0.5 mr-3"></i>
                                <div>
                                    <p class="font-medium text-red-700">Peringatan!</p>
                                    <p class="text-sm text-red-600 mt-1">
                                        Pembatalan pesanan akan mengirim notifikasi ke customer. 
                                        Tindakan ini tidak dapat dibatalkan.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <h4 class="font-medium text-gray-700 mb-3">Detail Pesanan</h4>
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">ID Pesanan</p>
                                        <p id="cancelOrderId" class="font-medium text-gray-800">#ORD-001</p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">Customer</p>
                                        <p id="cancelCustomer" class="font-medium text-gray-800">-</p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-500 mb-1">Total Pesanan</p>
                                        <p id="cancelTotal" class="font-medium text-gray-800">Rp 0</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <label for="cancelReason" class="block text-sm font-medium text-gray-700 mb-2">
                                Alasan Pembatalan <span class="text-red-500">*</span>
                            </label>
                            <select id="cancelReason" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200">
                                <option value="">Pilih alasan pembatalan</option>
                                <option value="stok_habis">Stok produk habis</option>
                                <option value="pembayaran_gagal">Pembayaran gagal/tidak valid</option>
                                <option value="customer_batal">Customer meminta pembatalan</option>
                                <option value="operasional">Kendala operasional</option>
                                <option value="waktu_habis">Melebihi batas waktu</option>
                                <option value="data_invalid">Data pesanan tidak lengkap</option>
                                <option value="lainnya">Alasan lainnya</option>
                            </select>
                            <p id="reasonError" class="text-red-500 text-sm mt-1 hidden">Silakan pilih alasan pembatalan</p>
                        </div>
                        
                        <div class="mb-6">
                            <label for="cancelNotes" class="block text-sm font-medium text-gray-700 mb-2">
                                Catatan Tambahan (Opsional)
                            </label>
                            <textarea id="cancelNotes" rows="4" class="w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200" placeholder="Tambahkan catatan atau penjelasan lebih detail..."></textarea>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button onclick="closeCancelModal()" class="px-5 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-300 font-medium">
                            Kembali
                        </button>
                        <button onclick="confirmCancel()" class="px-5 py-2.5 bg-red-500 hover:bg-red-600 text-white rounded-lg transition duration-300 font-medium flex items-center">
                            <i class="fas fa-times mr-2"></i>
                            Batalkan Pesanan
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Modal Functions
        let currentOrderId = null;

        function openApproveModal(orderId, customerName, total) {
            currentOrderId = orderId;
            document.getElementById('approveOrderId').textContent = '#ORD-' + String(orderId).padStart(3, '0');
            document.getElementById('approveCustomer').textContent = customerName || '-';
            document.getElementById('approveTotal').textContent = 'Rp ' + Number(total || 0).toLocaleString('id-ID');
            document.getElementById('approveModal').style.display = 'flex';
            document.getElementById('approveNotes').value = '';
        }

        function openCancelModal(orderId, customerName, total) {
            currentOrderId = orderId;
            document.getElementById('cancelOrderId').textContent = '#ORD-' + String(orderId).padStart(3, '0');
            document.getElementById('cancelCustomer').textContent = customerName || '-';
            document.getElementById('cancelTotal').textContent = 'Rp ' + Number(total || 0).toLocaleString('id-ID');
            document.getElementById('cancelModal').style.display = 'flex';
            document.getElementById('cancelReason').value = '';
            document.getElementById('cancelNotes').value = '';
            document.getElementById('reasonError').classList.add('hidden');
        }

        // Helper buat tombol yang pake data-attribute (di tabel & quick actions)
        function openApproveFromButton(btn) {
            const id = btn.getAttribute('data-order-id');
            const name = btn.getAttribute('data-customer-name') || '';
            const total = parseInt(btn.getAttribute('data-total') || '0', 10);
            openApproveModal(id, name, total);
        }

        function openCancelFromButton(btn) {
            const id = btn.getAttribute('data-order-id');
            const name = btn.getAttribute('data-customer-name') || '';
            const total = parseInt(btn.getAttribute('data-total') || '0', 10);
            openCancelModal(id, name, total);
        }

        function closeApproveModal() {
            document.getElementById('approveModal').style.display = 'none';
            currentOrderId = null;
        }

        function closeCancelModal() {
            document.getElementById('cancelModal').style.display = 'none';
            currentOrderId = null;
        }

        // Approve: kirim ke backend + update DOM
        async function confirmApprove() {
            if (!currentOrderId) return;

            const notes = document.getElementById('approveNotes').value;

            try {
                const res = await fetch(`/admin/orders/${currentOrderId}/approve`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ notes })
                });

                const data = await res.json();

                if (!data.success) {
                    showNotification(data.message || 'Gagal approve pesanan', 'error');
                    return;
                }

                const orderRow = document.getElementById('order-' + currentOrderId);
                const quickOrder = document.getElementById('quick-order-' + currentOrderId);
                
                if (orderRow) {
                    orderRow.classList.add('fade-out');
                    setTimeout(() => {
                        orderRow.remove();
                    }, 500);
                }
                
                if (quickOrder) {
                    quickOrder.classList.add('fade-out');
                    setTimeout(() => {
                        quickOrder.remove();
                        
                        const quickActionOrders = document.getElementById('quickActionOrders');
                        if (quickActionOrders && quickActionOrders.children.length === 0) {
                            quickActionOrders.innerHTML = '<p class="text-gray-500 text-center py-4">Tidak ada pesanan pending</p>';
                        }
                    }, 500);
                }

                showNotification(data.message || 'Pesanan berhasil diapprove!', 'success');
                closeApproveModal();
            } catch (err) {
                console.error(err);
                showNotification('Terjadi kesalahan saat approve pesanan', 'error');
            }
        }

        // Cancel: kirim ke backend + update DOM
        async function confirmCancel() {
            if (!currentOrderId) return;

            const reason = document.getElementById('cancelReason').value;
            const notes = document.getElementById('cancelNotes').value;
            const reasonError = document.getElementById('reasonError');

            if (!reason) {
                reasonError.classList.remove('hidden');
                document.getElementById('cancelReason').focus();
                return;
            }

            reasonError.classList.add('hidden');

            try {
                const res = await fetch(`/admin/orders/${currentOrderId}/cancel`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ reason, notes })
                });

                const data = await res.json();

                if (!data.success) {
                    showNotification(data.message || 'Gagal cancel pesanan', 'error');
                    return;
                }

                const orderRow = document.getElementById('order-' + currentOrderId);
                const quickOrder = document.getElementById('quick-order-' + currentOrderId);
                
                if (orderRow) {
                    orderRow.classList.add('fade-out');
                    setTimeout(() => {
                        orderRow.remove();
                    }, 500);
                }
                
                if (quickOrder) {
                    quickOrder.classList.add('fade-out');
                    setTimeout(() => {
                        quickOrder.remove();
                        
                        const quickActionOrders = document.getElementById('quickActionOrders');
                        if (quickActionOrders && quickActionOrders.children.length === 0) {
                            quickActionOrders.innerHTML = '<p class="text-gray-500 text-center py-4">Tidak ada pesanan pending</p>';
                        }
                    }, 500);
                }

                showNotification(data.message || 'Pesanan berhasil dibatalkan!', 'error');
                closeCancelModal();
            } catch (err) {
                console.error(err);
                showNotification('Terjadi kesalahan saat cancel pesanan', 'error');
            }
        }

        // Notification System
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed top-20 right-4 z-50 px-6 py-4 rounded-lg shadow-lg animate__animated animate__fadeInRight ${
                type === 'success' ? 'bg-green-500' : 'bg-red-500'
            } text-white max-w-sm`;
            
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-times-circle'} mr-3 text-xl"></i>
                    <span class="font-medium">${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('animate__fadeInRight');
                notification.classList.add('animate__fadeOutRight');
                setTimeout(() => {
                    notification.remove();
                }, 1000);
            }, 3000);
        }

        // Close modals when clicking outside
        window.addEventListener('click', function(event) {
            const approveModal = document.getElementById('approveModal');
            const cancelModal = document.getElementById('cancelModal');
            
            if (event.target === approveModal) {
                closeApproveModal();
            }
            if (event.target === cancelModal) {
                closeCancelModal();
            }
        });

        // Close modals with Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeApproveModal();
                closeCancelModal();
            }
        });
    </script>
