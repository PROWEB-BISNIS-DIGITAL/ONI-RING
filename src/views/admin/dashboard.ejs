<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Dashboard Admin' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        
        .main-content {
            flex: 1;
            overflow-y: auto;
            padding: 2rem;
        }
        
        .dashboard-card {
            transition: all 0.3s ease;
        }
        
        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        
        .status-badge {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.7rem;
            letter-spacing: 0.05em;
        }
    </style>
</head>
<body>
    <div class="flex pt-16 min-h-screen">
        <%- include('./partialsAdmin/sidebar') %>

        <main class="main-content h-full" style="flex: 1; padding: 2rem;">

            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">Dashboard</h1>
                    <p class="text-gray-600">Ringkasan aktivitas sistem</p>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="dashboard-card bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Total Pesanan</p>
                            <p class="text-2xl font-bold text-blue-600">
                                <%= (stats && stats.totalOrders) || 0 %>
                            </p>
                        </div>
                        <div class="bg-blue-100 p-3 rounded-full">
                            <i class="fas fa-shopping-cart text-blue-600 text-2xl"></i>
                        </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-2">
                        +<%= (stats && stats.todayOrders) || 0 %> pesanan hari ini
                    </p>
                </div>

                <div class="dashboard-card bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Total Produk</p>
                            <p class="text-2xl font-bold text-purple-600">
                                <%= (stats && stats.totalProducts) || 0 %>
                            </p>
                        </div>
                        <div class="bg-purple-100 p-3 rounded-full">
                            <i class="fas fa-utensils text-purple-600 text-2xl"></i>
                        </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-2">
                        <%= (stats && stats.activeProducts) || 0 %> produk aktif
                    </p>
                </div>

                <div class="dashboard-card bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-gray-500">Total Pengguna</p>
                            <p class="text-2xl font-bold text-red-600">
                                <%= (stats && stats.totalUsers) || 0 %>
                            </p>
                        </div>
                        <div class="bg-red-100 p-3 rounded-full">
                            <i class="fas fa-users text-red-600 text-2xl"></i>
                        </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-2">
                        +<%= (stats && stats.newUsers) || 0 %> user baru bulan ini
                    </p>
                </div>
            </div>

            <!-- Pesanan Terbaru -->
            <div class="bg-white rounded-lg shadow p-6 mb-8">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-bold text-gray-800">Pesanan Terbaru</h2>
                    <a href="/admin/orders" class="text-red-500 hover:text-red-600 font-semibold flex items-center">
                        Lihat Semua <i class="fas fa-arrow-right ml-2"></i>
                    </a>
                </div>
                
                <% if (recentOrders && recentOrders.length > 0) { %>
                    <div class="overflow-x-auto rounded-lg border border-gray-200">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID Pesanan</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% recentOrders.forEach(function(order) { %>
                                    <tr class="hover:bg-gray-50 transition-colors duration-150">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="flex-shrink-0 h-10 w-10 bg-gray-100 rounded-lg flex items-center justify-center">
                                                    <i class="fas fa-receipt text-gray-600"></i>
                                                </div>
                                                <div class="ml-4">
                                                    <div class="text-sm font-medium text-gray-900">
                                                        #ORD-<%= String(order.id).padStart(3, '0') %>
                                                    </div>
                                                    <div class="text-sm text-gray-500">
                                                        <%= order.order_code || 'N/A' %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= order.customer_name || '-' %>
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                <%= order.customer_email || order.customer_phone || '' %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-bold text-gray-900">
                                                Rp <%= Number(order.total || 0).toLocaleString('id-ID') %>
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                <%= order.item_count || '1' %> item
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <% 
                                                const status = (order.status || '').toLowerCase();
                                                let statusClass = 'bg-yellow-100 text-yellow-800';
                                                let statusIcon = 'fa-clock';
                                                let statusLabel = 'Pending';

                                                if (status === 'confirmed' || status === 'approved' || status === 'selesai' || status === 'completed') {
                                                    statusClass = 'bg-green-100 text-green-800';
                                                    statusIcon = 'fa-check-circle';
                                                    statusLabel = 'Selesai';
                                                } else if (status === 'cancelled' || status === 'canceled' || status === 'batal') {
                                                    statusClass = 'bg-red-100 text-red-800';
                                                    statusIcon = 'fa-times-circle';
                                                    statusLabel = 'Dibatalkan';
                                                } else if (status === 'processing' || status === 'diproses') {
                                                    statusClass = 'bg-blue-100 text-blue-800';
                                                    statusIcon = 'fa-sync-alt';
                                                    statusLabel = 'Diproses';
                                                } else if (status === 'shipped' || status === 'dikirim') {
                                                    statusClass = 'bg-indigo-100 text-indigo-800';
                                                    statusIcon = 'fa-shipping-fast';
                                                    statusLabel = 'Dikirim';
                                                } else if (status === 'delivered' || status === 'terkirim') {
                                                    statusClass = 'bg-teal-100 text-teal-800';
                                                    statusIcon = 'fa-box-check';
                                                    statusLabel = 'Terkirim';
                                                }
                                            %>
                                            <div class="flex items-center">
                                                <span class="status-badge px-3 py-1 rounded-full <%= statusClass %> flex items-center">
                                                    <i class="fas <%= statusIcon %> mr-2"></i>
                                                    <%= statusLabel %>
                                                </span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">
                                                <%= order.created_at_formatted || order.created_at || '-' %>
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                <%= order.time_formatted || '' %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-12">
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-gray-100 mb-4">
                            <i class="fas fa-shopping-cart text-gray-400 text-xl"></i>
                        </div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">Belum ada pesanan</h3>
                        <p class="text-gray-500 max-w-md mx-auto">
                            Belum ada pesanan yang masuk. Pesanan akan muncul di sini ketika customer melakukan pemesanan.
                        </p>
                    </div>
                <% } %>
                
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <div class="flex justify-between items-center text-sm text-gray-500">
                        <div>
                            Menampilkan <span class="font-medium"><%= recentOrders ? recentOrders.length : 0 %></span> pesanan terbaru
                        </div>
                        <a href="/admin/orders" class="text-red-500 hover:text-red-700 font-medium">
                            Kelola semua pesanan
                        </a>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-start">
                        <div class="bg-red-100 p-3 rounded-lg mr-4">
                            <i class="fas fa-utensils text-red-500 text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold mb-2 text-gray-800">Tambah Produk Baru</h3>
                            <p class="text-gray-600 mb-4">Tambahkan menu makanan atau minuman baru ke katalog.</p>
                            <a href="/admin/products" class="inline-block bg-red-500 hover:bg-red-600 text-white px-4 py-2.5 rounded-lg transition duration-300 font-medium">
                                <i class="fas fa-plus mr-2"></i>Tambah Produk
                            </a>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-start">
                        <div class="bg-blue-100 p-3 rounded-lg mr-4">
                            <i class="fas fa-chart-bar text-blue-500 text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold mb-2 text-gray-800">Lihat Laporan</h3>
                            <p class="text-gray-600 mb-4">Analisis penjualan dan kinerja toko Anda.</p>
                            <a href="/admin/managementU" class="inline-block bg-blue-500 hover:bg-blue-600 text-white px-4 py-2.5 rounded-lg transition duration-300 font-medium">
                                <i class="fas fa-chart-line mr-2"></i>Lihat Laporan
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ringkasan Tambahan -->
            <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-bold mb-4 text-gray-800">Ringkasan Mingguan</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <!-- Pesanan Minggu Ini -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Pesanan Minggu Ini</p>
            <p class="text-2xl font-bold text-gray-800">
                <%= (stats && stats.total_transaksi_minggu_ini) || 0 %>
            </p>
            <% if (stats && stats.transaksi_hari_ini) { %>
            <p class="text-xs text-gray-500 mt-1">
                <%= stats.transaksi_hari_ini || 0 %> transaksi hari ini
            </p>
            <% } %>
        </div>
        
        <!-- Omset Minggu Ini -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Omset Minggu Ini</p>
            <p class="text-2xl font-bold text-gray-800">
                Rp <%= (stats && stats.omset_minggu_ini) ? stats.omset_minggu_ini.toLocaleString('id-ID') : '0' %>
            </p>
            <% if (stats && stats.omset_hari_ini) { %>
            <p class="text-xs text-gray-500 mt-1">
                Rp <%= stats.omset_hari_ini.toLocaleString('id-ID') %> hari ini
            </p>
            <% } %>
        </div>
        
        <!-- Rata-rata Transaksi -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Rata Transaksi</p>
            <p class="text-2xl font-bold text-gray-800">
                Rp <%= (stats && stats.rata_transaksi_minggu_ini) ? stats.rata_transaksi_minggu_ini.toLocaleString('id-ID') : '0' %>
            </p>
            <p class="text-xs text-gray-500 mt-1">
                per transaksi
            </p>
        </div>
        
        <!-- Laba Minggu Ini -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <p class="text-sm text-gray-500">Laba Minggu Ini</p>
            <p class="text-2xl font-bold text-gray-800">
                Rp <%= (stats && stats.laba_minggu_ini) ? stats.laba_minggu_ini.toLocaleString('id-ID') : '0' %>
            </p>
            <p class="text-xs <%= (stats && stats.margin_minggu_ini >= 0) ? 'text-green-600' : 'text-red-600' %> font-medium mt-1">
                <%= (stats && stats.margin_minggu_ini) ? stats.margin_minggu_ini.toFixed(2) : '0' %>% margin
            </p>
        </div>
    </div>
</div>

        </main>
    </div>

    <!-- Script Minimal -->
    <script>
        // Log untuk debugging
        console.log('Dashboard Admin loaded successfully');
        console.log('Total orders:', <%= (stats && stats.totalOrders) || 0 %>);
        console.log('Recent orders count:', <%= recentOrders ? recentOrders.length : 0 %>);
        
        // Update waktu real-time
        function updateTime() {
            const now = new Date();
            const timeElement = document.getElementById('current-time');
            if (timeElement) {
                timeElement.textContent = now.toLocaleTimeString('id-ID', {
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });
            }
        }
        
        // Update waktu setiap detik
        setInterval(updateTime, 1000);
    </script>
</body>
</html>