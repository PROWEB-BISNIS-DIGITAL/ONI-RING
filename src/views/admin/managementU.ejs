            const pengeluaranData = <%= JSON.stringify(data.chart_pengeluaran || {}) %>;
            
            const labaKotor = labaData.total_laba_kotor || 0;
            const totalPengeluaran = pengeluaranData.total_pengeluaran || 0;
            const labaBersih = labaKotor - totalPengeluaran;
            
            labaChart = new Chart(labaCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Laba Kotor', 'Pengeluaran', 'Laba Bersih'],
