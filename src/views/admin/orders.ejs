    <script>
        // Filter functionality
        document.querySelectorAll('.filter-btn').forEach(button => {
            button.addEventListener('click', function () {
                const filter = this.getAttribute('data-filter');

                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active', 'bg-red-500', 'text-white');
                    btn.classList.add('bg-white', 'text-gray-700', 'border');
                });

                this.classList.add('active', 'bg-red-500', 'text-white');
                this.classList.remove('bg-white', 'text-gray-700', 'border');

                document.querySelectorAll('.order-row').forEach(row => {
                    if (filter === 'all' || row.dataset.status === filter) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function (e) {
            const searchTerm = e.target.value.toLowerCase();
            document.querySelectorAll('.order-row').forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
        
        // Update status
        async function updateStatus(orderId, newStatus) {
            if (!confirm(`Ubah status pesanan menjadi "${newStatus}"?`)) {
                location.reload();
                return;
            }
            
            try {
                const res = await fetch(`/admin/orders/${orderId}/status`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status: newStatus })
                });

                const data = await res.json();

                if (data.success) {
                    closeConfirmModal();
                    
                    // Get order data from row
                    const orderRow = document.querySelector(`tr[data-order*='"id":"${orderId}"']`);
                    if (orderRow) {
                        const orderData = JSON.parse(orderRow.getAttribute('data-order'));
                        showSuccessStatusUpdate(orderData, newStatus);
                        
                        // Update data-original-value on select
                        if (selectElement) {
                            selectElement.setAttribute('data-original-value', newStatus);
                            selectElement.setAttribute('data-status', newStatus);
                            // Update row status
                            orderRow.setAttribute('data-status', newStatus);
                        }
                    }
                    
                } else {
                    closeConfirmModal();
                    showErrorStatusUpdate(data.message || 'Gagal mengupdate status');
                    
                    // Reset select to original value on error
                    if (selectElement && pendingStatusUpdate.originalStatus) {
                        selectElement.value = pendingStatusUpdate.originalStatus;
                    }
                }
            } catch (err) {
                console.error(err);
                closeConfirmModal();
                showErrorStatusUpdate('Terjadi kesalahan jaringan');
                
                // Reset select to original value on error
                if (selectElement && pendingStatusUpdate.originalStatus) {
                    selectElement.value = pendingStatusUpdate.originalStatus;
                }
            }
        }
        
        // Function to show success status update modal
        function showSuccessStatusUpdate(order, newStatus) {
            const modal = document.getElementById('updateStatusModal');
            const successContent = document.getElementById('updateStatusContent');
            const errorContent = document.getElementById('updateStatusError');
            
            // Reset display
            successContent.classList.remove('hidden');
            errorContent.classList.add('hidden');
            
            // Set green header for success
            document.getElementById('updateStatusHeader').style.backgroundColor = '#10b981';
            document.getElementById('updateStatusTitle').textContent = 'Berhasil Diperbarui';
            
            // Format status text
            const statusText = {
                'pending': 'Pending',
                'confirmed': 'Confirmed',
                'processing': 'Diproses',
                'completed': 'Selesai',
                'cancelled': 'Dibatalkan'
            }[newStatus] || newStatus;
            
            // Format date like "3 Des, 19.01"
            const now = new Date();
            const formattedDate = now.toLocaleDateString('id-ID', {
                day: 'numeric',
                month: 'short',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            // Fill data
            document.getElementById('updateStatusValue').textContent = statusText;
            document.getElementById('updateStatusDate').textContent = formattedDate;
            document.getElementById('updateOrderId').textContent = `#ORD-${order.id.toString().padStart(3, '0')}`;
            document.getElementById('updateCustomerName').textContent = order.customer_name;
            
            // Show modal
            modal.classList.add('active');
        }
        
        // Function to show error status update modal
        function showErrorStatusUpdate(message) {
            const modal = document.getElementById('updateStatusModal');
            const successContent = document.getElementById('updateStatusContent');
            const errorContent = document.getElementById('updateStatusError');
            
            // Reset display
            successContent.classList.add('hidden');
            errorContent.classList.remove('hidden');
            
            // Set red header for error
            document.getElementById('updateStatusHeader').style.backgroundColor = '#ef4444';
            document.getElementById('updateStatusTitle').textContent = 'Gagal Diperbarui';
            
            // Fill error message
            document.getElementById('errorMessage').textContent = message;
            
            // Show modal
            modal.classList.add('active');
        }
        
        // Function to close update status modal
        function closeUpdateStatusModal() {
            document.getElementById('updateStatusModal').classList.remove('active');
        }
        
        // Modal functions
        function viewDetail(orderId) {
            const modal = document.getElementById('orderDetailModal');
            const modalLoading = document.getElementById('modalLoading');
            const modalData = document.getElementById('modalData');

            // Show modal and loading state
            modal.classList.add('active');
            modalLoading.classList.remove('hidden');
            modalData.classList.add('hidden');

            // Get order data from data attribute
            const orderRow = document.querySelector(`tr[data-order*='"id":"${orderId}"']`);
            if (orderRow) {
                const orderData = JSON.parse(orderRow.getAttribute('data-order'));
                populateModal(orderData);
            } else {
                // Fallback: Fetch from API
                fetchOrderDetail(orderId);
            }
        }

        function populateModal(order) {
            const modalLoading = document.getElementById('modalLoading');
            const modalData = document.getElementById('modalData');

            // Hide loading, show data
            modalLoading.classList.add('hidden');
            modalData.classList.remove('hidden');

            // Format date
            const orderDate = new Date(order.created_at);
            const formattedDate = orderDate.toLocaleDateString('id-ID', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });

            // Set status class
            const statusElement = document.getElementById('modalStatus');
            statusElement.textContent = getStatusText(order.status);
            statusElement.className = `status-badge-modal ${getStatusClass(order.status)}`;

            // Populate order info
            document.getElementById('modalOrderId').textContent = `#ORD-${order.id.toString().padStart(3, '0')}`;
            document.getElementById('modalDate').textContent = formattedDate;
            document.getElementById('modalPayment').textContent = order.payment_method || 'Tidak diketahui';
            document.getElementById('modalTotal').textContent = `Rp ${order.total.toLocaleString('id-ID')}`;
            
            // Populate customer info
            document.getElementById('modalCustomerName').textContent = order.customer_name || '-';
            document.getElementById('modalCustomerPhone').textContent = order.customer_phone || '-';
            document.getElementById('modalCustomerAddress').textContent = order.customer_address || '-';
            
            // Populate items
            const itemsContainer = document.getElementById('modalItems');
            itemsContainer.innerHTML = '';

            let itemsTotal = 0;
            if (order.items && order.items.length > 0) {
                order.items.forEach(item => {
                    const subtotal = item.price * item.quantity;
                    itemsTotal += subtotal;

                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td class="py-3 px-4">
                            <div class="font-medium">${item.product_name || 'Produk'}</div>
                        </td>
                        <td class="py-3 px-4">Rp ${item.price.toLocaleString('id-ID')}</td>
                        <td class="py-3 px-4">${item.quantity}</td>
                        <td class="py-3 px-4 font-medium">Rp ${subtotal.toLocaleString('id-ID')}</td>
                    `;
                    itemsContainer.appendChild(row);
                });
            } else {
                itemsContainer.innerHTML = `
                    <tr>
                        <td colspan="4" class="py-4 text-center text-gray-500">
                            Tidak ada item dalam pesanan ini
                        </td>
                    </tr>
                `;
            }

            document.getElementById('modalItemsTotal').textContent = `Rp ${itemsTotal.toLocaleString('id-ID')}`;
            
            // Populate notes if exists
            const notesSection = document.getElementById('modalNotesSection');
            notesSection.classList.add('hidden');
        }

        async function fetchOrderDetail(orderId) {
            try {
                const res = await fetch(`/admin/orders/${orderId}`);
                const data = await res.json();

                if (data.success) {
                    populateModal(data.order);
                } else {
                    alert('Gagal memuat detail pesanan');
                    closeModal();
                }
            } catch (err) {
                console.error(err);
                alert('Terjadi kesalahan saat memuat detail pesanan');
                closeModal();
            }
        }

        function closeModal() {
            document.getElementById('orderDetailModal').classList.remove('active');
        }

        // Helper functions for status
        function getStatusText(status) {
            const statusMap = {
                'pending': 'Pending',
                'confirmed': 'Confirmed',
                'processing': 'Diproses',
                'completed': 'Selesai',
                'cancelled': 'Dibatalkan'
            };
            return statusMap[status] || status;
        }

        function getStatusClass(status) {
            const classMap = {
                'pending': 'bg-yellow-100 text-yellow-800',
                'confirmed': 'bg-blue-100 text-blue-800',
                'processing': 'bg-indigo-100 text-indigo-800',
                'completed': 'bg-green-100 text-green-800',
                'cancelled': 'bg-red-100 text-red-800'
            };
            return classMap[status] || 'bg-gray-100 text-gray-800';
        }

        // Close modal when clicking outside
        document.getElementById('orderDetailModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                if (document.getElementById('orderDetailModal').classList.contains('active')) closeModal();
                if (document.getElementById('confirmStatusModal').classList.contains('active')) closeConfirmModal();
                if (document.getElementById('updateStatusModal').classList.contains('active')) closeUpdateStatusModal();
            }
        });
    </script>
