            <li><a href="#home" class="block py-2 hover:text-primary transition duration-300">Home</a></li>
            <li><a href="#about" class="block py-2 hover:text-primary transition duration-300">About</a></li>
            <li><a href="#product" class="block py-2 hover:text-primary transition duration-300">Product</a></li>
            <li><a href="#testimoni" class="block py-2 hover:text-primary transition duration-300">Testimoni</a></li>
            <li><a href="#contact" class="block py-2 hover:text-primary transition duration-300">Contact</a></li>
            <% if (user) { %>
                <li class="border-t border-gray-700 pt-2">
                    <span class="block py-2 text-gray-400">Logged in as: <%= user.name %></span>
                    <% if (user.role === 'admin') { %>
                        <a href="/admin/dashboard" class="block py-2 text-green-400 hover:text-green-300 transition duration-300">Admin Dashboard</a>
                    <% } %>
                    <a href="/auth/logout" class="block py-2 text-red-400 hover:text-red-300 transition duration-300">Logout</a>
                </li>
            <% } else { %>
                <li class="border-t border-gray-700 pt-2">
                    <a href="/auth/login" class="block py-2 text-primary hover:text-accent transition duration-300">Login</a>
                    <a href="/auth/register" class="block py-2 text-primary hover:text-accent transition duration-300">Register</a>
                </li>
            <% } %>
        </ul>
    </nav>

    <!-- Cart Modal -->
    <div id="cart-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="cart-modal bg-white rounded-lg shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
            <div class="bg-primary text-white p-4 flex justify-between items-center">
                <h3 class="text-2xl font-bold">Keranjang Belanja</h3>
                <button id="close-cart" class="text-white hover:text-gray-200 text-3xl">&times;</button>
            </div>
            <div id="cart-items" class="p-6 max-h-96 overflow-y-auto"></div>
            <div class="border-t p-4 bg-gray-50">
                <div class="flex justify-between items-center mb-4">
                    <span class="text-xl font-bold">Total:</span>
                    <span id="cart-total" class="text-2xl font-bold text-primary">Rp 0</span>
                </div>
                <button id="checkout-btn" class="w-full bg-primary hover:bg-accent text-white py-3 px-4 rounded-lg transition duration-300 font-semibold text-lg">
                    Checkout Sekarang
                </button>
            </div>
        </div>
    </div>

    <!-- Checkout Modal -->
    <div id="checkout-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="cart-modal bg-white rounded-lg shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="bg-primary text-white p-4 flex justify-between items-center">
