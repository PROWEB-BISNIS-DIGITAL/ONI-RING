                        orderDetails += `*Order ID:* ${orderId}%0A%0A`;
                        orderDetails += `Mohon transfer ke nomor OVO di atas dan kirim bukti pembayaran. Terima kasih! üòä`;
                        
                        const waNumber = '6285797401995';
                        const waLink = `https://wa.me/${waNumber}?text=${orderDetails}`;
                        window.open(waLink, '_blank');
                    }
                    
                    clearCartAndClose();
                }, 2000);
                
            } else if (paymentType === 'dana') {
