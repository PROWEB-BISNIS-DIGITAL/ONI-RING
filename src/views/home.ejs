                        const waLink = `https://wa.me/${waNumber}?text=${orderDetails}`;
                        window.open(waLink, '_blank');
                    }
                    
                    clearCartAndClose();
                }, 2000);
            }
        });

        // Helper function to clear cart and close modal
        function clearCartAndClose() {
            cart = [];
            updateCartUI();
            document.getElementById('checkout-modal').classList.add('hidden');
            document.getElementById('checkout-form').reset();
        }

        // Update button text based on payment selection
        document.querySelectorAll('input[name="payment"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const submitBtn = document.getElementById('submit-btn-text');
                const submitBtnContainer = document.getElementById('submit-order-btn');
