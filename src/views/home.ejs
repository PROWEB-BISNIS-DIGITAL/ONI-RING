                <form id="checkout-form" class="space-y-4">
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Nama Lengkap *</label>
                        <input type="text" id="customer-name" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary transition duration-300"
                            placeholder="Masukkan nama lengkap Anda">
                    </div>
                    
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Nomor Telepon/WhatsApp *</label>
                        <input type="tel" id="customer-phone" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary transition duration-300"
                            placeholder="08xxxxxxxxxx">
                    </div>
                    
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Alamat Lengkap *</label>
                        <textarea id="customer-address" required rows="3"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary transition duration-300"
                            placeholder="Masukkan alamat lengkap untuk pengiriman"></textarea>
                    </div>

                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Pesanan Anda</label>
                        <div id="order-summary" class="bg-gray-50 p-4 rounded-lg space-y-2 max-h-48 overflow-y-auto"></div>
                    </div>

                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">Metode Pembayaran *</label>
                        <div class="space-y-3">
                            <label class="flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-primary transition duration-300">
                                <input type="radio" name="payment" value="COD" required class="mr-3 w-5 h-5 text-primary">
                                <div class="flex-1">
                                    <span class="font-semibold">Cash On Delivery (COD)</span>
                                    <p class="text-sm text-gray-600">Bayar saat pesanan diterima</p>
                                </div>
                            </label>

                            <label class="flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-primary transition duration-300">
                                <input type="radio" name="payment" value="GoPay" required class="mr-3 w-5 h-5 text-primary">
                                <div class="flex-1 flex items-center justify-between">
                                    <div>
                                        <span class="font-semibold">GoPay</span>
                                        <p class="text-sm text-gray-600">Bayar dengan GoPay</p>
                                    </div>
                                    <img src="https://upload.wikimedia.org/wikipedia/commons/8/86/Gopay_logo.svg" alt="GoPay" class="h-8">
                                </div>
                            </label>

                            <label class="flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-primary transition duration-300">
                                <input type="radio" name="payment" value="OVO" required class="mr-3 w-5 h-5 text-primary">
                                <div class="flex-1 flex items-center justify-between">
                                    <div>
                                        <span class="font-semibold">OVO</span>
                                        <p class="text-sm text-gray-600">Bayar dengan OVO</p>
                                    </div>
                                    <img src="https://upload.wikimedia.org/wikipedia/commons/e/eb/Logo_ovo_purple.svg" alt="OVO" class="h-8">
                                </div>
                            </label>

                            <label class="flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-primary transition duration-300">
                                <input type="radio" name="payment" value="DANA" required class="mr-3 w-5 h-5 text-primary">
                                <div class="flex-1 flex items-center justify-between">
                                    <div>
                                        <span class="font-semibold">DANA</span>
                                        <p class="text-sm text-gray-600">Bayar dengan DANA</p>
                                    </div>
                                    <img src="https://upload.wikimedia.org/wikipedia/commons/7/72/Logo_dana_blue.svg" alt="DANA" class="h-8">
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="border-t pt-4">
                        <div class="flex justify-between items-center mb-4">
                            <span class="text-xl font-bold">Total Pembayaran:</span>
                            <span id="checkout-total" class="text-2xl font-bold text-primary">Rp 0</span>
                        </div>
                        <button type="submit" id="submit-order-btn" class="w-full bg-green-500 hover:bg-green-600 text-white py-3 px-4 rounded-lg transition duration-300 font-semibold text-lg flex items-center justify-center">
                            <span id="submit-btn-text">Checkout</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Home Section -->
