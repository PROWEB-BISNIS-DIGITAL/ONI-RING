// ============================================
// EFEK KONFETI HIJAU
// ============================================

function createGreenConfettiEffect() {
    const confettiCount = 25;
    const colors = ['#10b981', '#34d399', '#059669', '#047857', '#065f46'];

    for (let i = 0; i < confettiCount; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti-green';
        confetti.style.cssText = `
            position: fixed;
            width: 10px;
            height: 10px;
            background-color: ${colors[Math.floor(Math.random() * colors.length)]};
            top: 40%;
            left: 50%;
            border-radius: ${Math.random() > 0.5 ? '50%' : '2px'};
            opacity: 0.9;
            z-index: 9999;
            pointer-events: none;
        `;

        // Animasi
        const angle = Math.random() * Math.PI * 2;
        const velocity = 50 + Math.random() * 100;
        const rotation = Math.random() * 360;

        const animation = confetti.animate([
            {
                transform: `translate(0, 0) rotate(0deg) scale(1)`,
                opacity: 1
            },
            {
                transform: `translate(${Math.cos(angle) * velocity}px, ${Math.sin(angle) * velocity}px) rotate(${rotation}deg) scale(0.5)`,
                opacity: 0
            }
        ], {
            duration: 1200 + Math.random() * 800,
            easing: 'cubic-bezier(0.215, 0.61, 0.355, 1)'
        });

        document.body.appendChild(confetti);

        // Hapus setelah animasi selesai
        animation.onfinish = () => confetti.remove();
    }
}

