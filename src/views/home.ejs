document.getElementById('checkout-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const name = document.getElementById('customer-name').value.trim();
    const phone = document.getElementById('customer-phone').value.trim();
    const address = document.getElementById('customer-address').value.trim();
    const paymentMethod = document.querySelector('input[name="payment"]:checked');

    if (!paymentMethod) {
        showNotification('❌ Pilih metode pembayaran terlebih dahulu!');
        return;
    }

    // Validasi data
    if (!name || !phone || !address) {
        showNotification('❌ Lengkapi semua data pelanggan!');
        return;
    }

    if (cart.length === 0) {
        showNotification('❌ Keranjang Anda kosong');
        return;
    }

    const totalAmount = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    const selectedPayment = paymentMethod.value;

    // Tampilkan loading
    const submitBtn = document.getElementById('submit-order-btn');
    const originalText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="animate-spin mr-2">⟳</span> Memproses...';

    try {
        // Siapkan data order
        const orderData = {
            name,
            phone,
            address,
            payment: selectedPayment, // 'COD' atau 'midtrans'
            items: cart.map(item => ({
                product_id: item.id,
                name: item.name,
                price: item.price,
                quantity: item.quantity
            })),
            total: totalAmount
        };

        console.log('Mengirim data order:', orderData);

        // Kirim ke backend
        const response = await fetch('/orders', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(orderData)
        });

        const data = await response.json();
        console.log('Response dari server:', data);

        if (data.success) {
            // Jika COD
            if (selectedPayment === 'COD') {
                showSuccessPopup(name, data.order_id, totalAmount, 'COD', phone);
                resetCart();
                document.getElementById('checkout-modal').classList.add('hidden');
            } 
            // Jika Midtrans
            else if (selectedPayment === 'midtrans' && data.snap_token) {
                // Close checkout modal
                document.getElementById('checkout-modal').classList.add('hidden');
                
                // Buka popup Midtrans
                window.snap.pay(data.snap_token, {
                    onSuccess: function(result) {
                        console.log('Pembayaran berhasil:', result);
                        showMidtransSuccessPopup(name, data.order_id, totalAmount, 'midtrans', phone);
                        resetCart();
                    },
                    onPending: function(result) {
                        console.log('Pembayaran tertunda:', result);
                        showMidtransPendingPopup(name, data.order_id, totalAmount, 'midtrans', phone);
                        resetCart();
                    },
                    onError: function(result) {
                        console.log('Pembayaran gagal:', result);
                        showNotification('❌ Pembayaran gagal: ' + (result.status_message || 'Silakan coba lagi'));
                        // Jangan reset cart, biarkan user coba lagi
                    },
                    onClose: function() {
                        console.log('Popup pembayaran ditutup');
                        showNotification('⚠️ Pembayaran belum diselesaikan. Pesanan Anda tetap tercatat.');
                    }
                });
            } else {
                showNotification('❌ Gagal memproses pembayaran. Silakan coba lagi.');
            }
            
        } else {
            showNotification('❌ ' + (data.message || 'Gagal membuat pesanan'));
        }

    } catch (error) {
        console.error('Error checkout:', error);
        showNotification('❌ Terjadi kesalahan. Coba lagi nanti.');
