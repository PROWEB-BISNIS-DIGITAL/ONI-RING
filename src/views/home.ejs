<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="/node_modules/animate.css/animate.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    


    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#ff6b6b',
                        secondary: '#f4f4f4',
                        accent: '#ff5252',
                    }
                }
            }
        }
    </script>
    <style>
        html{
            scroll-behavior: smooth;
        }
        .hero-bg {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://wallpaperaccess.com/full/329019.jpg');
            background-size: cover;
            background-position: center;
            animation: fadeIn 1s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideInDown {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .product-card {
            transition: all 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 35px rgba(255, 107, 107, 0.3);
        }

        .testimoni-card {
            background: linear-gradient(135deg, #ffeaa7, #fab1a0);
            transition: all 0.3s ease;
        }

        .testimoni-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .cart-badge {
            animation: bounce 0.5s ease;
        }

        .cart-modal {
            animation: slideInDown 0.3s ease;
        }

        .btn-pulse {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .add-to-cart-animation {
            animation: bounce 0.3s ease;
        }
    </style>
</head>

<body class="bg-secondary text-gray-800">
    <!-- Navigation -->
    <nav class="bg-gray-800 text-white py-4 sticky top-0 z-50 shadow-lg">
        <div class="container mx-auto flex justify-between items-center px-4">
            <div class="text-2xl font-bold text-primary">Cemal-Cemil</div>
            
            <!-- Desktop Menu -->
            <ul class="hidden md:flex space-x-8">
                <li><a href="#home" class="hover:text-primary transition duration-300">Home</a></li>
                <li><a href="#about" class="hover:text-primary transition duration-300">About</a></li>
                <li><a href="#product" class="hover:text-primary transition duration-300">Product</a></li>
                <li><a href="#testimoni" class="hover:text-primary transition duration-300">Testimoni</a></li>
                <li><a href="#contact" class="hover:text-primary transition duration-300">Contact</a></li>
            </ul>
            
            <!-- Cart & Auth -->
            <div class="flex items-center space-x-4">
                <!-- Cart Button -->
                <button id="cart-button" class="relative bg-primary hover:bg-accent px-4 py-2 rounded-full transition duration-300 flex items-center">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <span id="cart-count" class="ml-2 cart-badge bg-white text-primary font-bold px-2 py-1 rounded-full text-sm">0</span>
                </button>
                
                <!-- Auth Section -->
                <div class="flex items-center space-x-4">
                    <% if (user) { %>
                        <div class="hidden md:flex items-center space-x-3">
                            <span class="text-gray-300">Halo, <%= user.name %></span>
                            <% if (user.role === 'admin') { %>
                                <a href="/admin/dashboard" class="bg-green-500 hover:bg-green-600 px-4 py-2 rounded-lg transition duration-300">
                                    Admin
                                </a>
                            <% } %>
                            <a href="/auth/logout" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded-lg transition duration-300">
                                Logout
                            </a>
                        </div>
                    <% } else { %>
