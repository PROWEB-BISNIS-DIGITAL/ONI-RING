    <style>
        html {
            scroll-behavior: smooth;
        }

        .hero-bg {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://wallpaperaccess.com/full/329019.jpg');
            background-size: cover;
            background-position: center;
            animation: fadeIn 1s ease-in;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideInDown {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @keyframes bounce {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .product-card {
            transition: all 0.3s ease;
        }

        .product-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 35px rgba(255, 107, 107, 0.3);
        }

        .testimoni-card {
            background: linear-gradient(135deg, #ffeaa7, #fab1a0);
            transition: all 0.3s ease;
        }

        .testimoni-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .cart-badge {
            animation: bounce 0.5s ease;
        }

        .cart-modal {
            animation: slideInDown 0.3s ease;
        }

        .btn-pulse {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.7;
            }
        }

        .add-to-cart-animation {
            animation: bounce 0.3s ease;
        }

        .payment-option {
    display: flex;
    align-items: center;
    padding: 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.3s;
}

.payment-option:hover {
    border-color: #ff6b6b;
}

.payment-option input:checked + .payment-content {
    background-color: #fef2f2;
}

.payment-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

  .testimoni-card {
            background: white;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        .testimoni-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #FF6B6B, #FF8E8E, #FFB6B6);
            transform: scaleX(0);
            transition: transform 0.4s ease;
        }
        
        .testimoni-card:hover::before {
            transform: scaleX(1);
        }
        
        .testimoni-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 25px 50px rgba(255, 107, 107, 0.25);
        }
        
        .quote-mark {
            position: absolute;
            font-size: 120px;
            color: #FF6B6B;
            opacity: 0.08;
            top: -20px;
            right: 20px;
            font-family: Georgia, serif;
            line-height: 1;
            pointer-events: none;
        }
        
        .avatar-wrapper {
            position: relative;
            display: inline-block;
        }
        
        .avatar {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
            border: 4px solid white;
            box-shadow: 0 8px 20px rgba(255, 107, 107, 0.3);
            transition: all 0.3s ease;
        }
        
        .testimoni-card:hover .avatar {
            transform: scale(1.1) rotate(5deg);
            box-shadow: 0 12px 30px rgba(255, 107, 107, 0.4);
        }
        
        .avatar-badge {
            position: absolute;
            bottom: 0;
            right: -5px;
            width: 24px;
            height: 24px;
            background: #10B981;
            border: 3px solid white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .star-container {
            display: flex;
            gap: 4px;
        }
        
        .star {
            display: inline-block;
            transition: all 0.3s ease;
            filter: drop-shadow(0 2px 4px rgba(255, 193, 7, 0.3));
        }
        
        .testimoni-card:hover .star {
            transform: scale(1.2) rotate(72deg);
        }
        
        .star:nth-child(1) { transition-delay: 0s; }
        .star:nth-child(2) { transition-delay: 0.05s; }
        .star:nth-child(3) { transition-delay: 0.1s; }
        .star:nth-child(4) { transition-delay: 0.15s; }
        .star:nth-child(5) { transition-delay: 0.2s; }
        
        .testimonial-text {
            position: relative;
            z-index: 1;
            line-height: 1.8;
        }
        
        .card-decoration {
            position: absolute;
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, rgba(255, 107, 107, 0.1), transparent);
            border-radius: 50%;
            bottom: -30px;
            left: -30px;
            pointer-events: none;
        }
        
        .verified-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            background: linear-gradient(135deg, #FFF5F5, #FFE5E5);
            border-radius: 20px;
            border: 1px solid rgba(255, 107, 107, 0.2);
            transition: all 0.3s ease;
        }
        
        .testimoni-card:hover .verified-badge {
            background: linear-gradient(135deg, #FFE5E5, #FFD5D5);
            border-color: rgba(255, 107, 107, 0.4);
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-5px); }
        }
        
        .floating {
            animation: float 3s ease-in-out infinite;
        }

        .about-card {
    position: relative;
    animation: fadeInUp 0.8s ease-out forwards;
}

.about-card.delay-100 {
    animation-delay: 0.2s;
}

.about-card.delay-200 {
    animation-delay: 0.4s;
}


/* Icon Circle Pulse Effect */
.icon-circle {
    animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
    0%, 100% {
        box-shadow: 0 4px 20px rgba(255, 193, 7, 0.3);
    }
    50% {
        box-shadow: 0 4px 30px rgba(255, 193, 7, 0.6);
    }
}

    </style>
</head>

