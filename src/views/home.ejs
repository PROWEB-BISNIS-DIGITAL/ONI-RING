            <h2 class="text-4xl font-bold text-center mb-12 text-primary">Produk Kami</h2>
            
            <!-- Search Bar -->
            <div class="max-w-2xl mx-auto mb-8">
                <div class="relative">
                    <input 
                        type="text" 
                        id="product-search" 
                        placeholder="Cari produk favorit Anda..." 
