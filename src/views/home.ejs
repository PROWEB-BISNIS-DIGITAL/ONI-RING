                    </button>
                    
                    <!-- Note -->
                    <p class="text-center text-gray-500 text-xs mt-3">
                        Notifikasi akan dikirim via WhatsApp dalam 5 menit
                    </p>
                </div>
            </div>
        `;
        
        // Tambahkan ke overlay
        overlay.appendChild(popupContent);
        
        // Tambahkan efek konfeti hijau
        createGreenConfettiEffect();
        
        // Tambahkan ke body
        document.body.appendChild(overlay);
        
        // Tambahkan event listener untuk tombol OK
        setTimeout(() => {
            document.getElementById('close-success-popup').addEventListener('click', () => {
                overlay.classList.remove('animate__fadeIn');
                overlay.classList.add('animate__fadeOut');
                setTimeout(() => overlay.remove(), 500);
            });
            
            // Auto close setelah 10 detik
            setTimeout(() => {
                if (document.body.contains(overlay)) {
                    overlay.classList.remove('animate__fadeIn');
                    overlay.classList.add('animate__fadeOut');
                    setTimeout(() => overlay.remove(), 500);
                }
            }, 10000);
        }, 100);
    }

