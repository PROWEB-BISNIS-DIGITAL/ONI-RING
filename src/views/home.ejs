// Format currency
function formatCurrency(amount) {
    return 'Rp ' + amount.toLocaleString('id-ID');
}

// Fetch products from API
async function fetchProducts() {
    try {
        const response = await fetch('/api/products');
        const data = await response.json();
        
        if (data.success) {
            products = data.products.filter(p => p.status === 'active');
            displayProducts();
        }
    } catch (error) {
        console.error('Error fetching products:', error);
        showNotification('‚ùå Gagal memuat produk');
    }
}

// Display products
function displayProducts() {
    const productList = document.getElementById('product-list');
    const noResults = document.getElementById('no-results');
    
    if (products.length === 0) {
        noResults.classList.remove('hidden');
        productList.innerHTML = '';
        return;
    }
    
    noResults.classList.add('hidden');
    productList.innerHTML = '';
    
    products.forEach(product => {
        // PERBAIKAN DISINI: Gunakan EJS yang benar
        const isLoggedIn = <%- typeof user !== 'undefined' && user ? 'true' : 'false' %>;
        
        const productCard = document.createElement('div');
        productCard.className = 'product-card bg-white rounded-lg shadow-lg overflow-hidden';
        
        // Tombol Add to Cart
        let buttonHTML = '';
        if (isLoggedIn) {
            buttonHTML = `
                <button onclick="addToCart(${product.id})" 
                        class="w-full bg-primary hover:bg-accent text-white py-3 px-4 rounded-lg transition duration-300 transform hover:scale-105 font-semibold flex items-center justify-center">
